<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="TRS_APP.Views.EventsView"
             x:CompileBindings="False">

  <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="14" RowSpacing="10">

    <TextBlock Text="Wydarzenia" FontSize="22" FontWeight="SemiBold"/>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
      <TextBox x:Name="TitleBox" Width="240" Watermark="Tytuł"/>
      <TextBox x:Name="LocationBox" Width="200" Watermark="Lokalizacja"/>
      <Button x:Name="AddBtn" Content="Dodaj"/>
    </StackPanel>

    <Border Grid.Row="2" CornerRadius="8" Padding="8" BorderBrush="#333" BorderThickness="1">
      <dg:DataGrid x:Name="EventsGrid" IsReadOnly="True" AutoGenerateColumns="True"/>
    </Border>

    <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10">
      <Button x:Name="RefreshBtn" Content="Odśwież"/>
      <Button x:Name="DeleteBtn" Content="Usuń zaznaczone"/>
      <TextBlock x:Name="StatusTxt" Margin="12,0,0,0" VerticalAlignment="Center" Opacity="0.8"/>
    </StackPanel>

  </Grid>
</UserControl>
